@page "/paciente/{id}"
@inject Consultorio.Data.IUsuariosService UsuariosService;
@inject NavigationManager Navigation;
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<EditForm Model="usuario"  >
    
    <div class="container">
        <h2 class="text-center mt-4 mb-4">Bem-Vindo Pasciente</h2>
        <div class="form-group">
            <label class="lead">Nome</label>
            <InputText class="form-control" id="nome" name="nome" @bind-Value="usuario.Nome" readonly></InputText>
        </div>
        <div class="form-group">
            <label class="lead">User</label>
            <InputText class="form-control" id="User" name="User" @bind-Value="usuario.User" readonly></InputText>
        </div>
        <div class="form-group">
            <label class="lead">Password</label>
            <InputText class="form-control" id="Password" name="Password" @bind-Value="usuario.Password" readonly></InputText>
        </div>
        <div class="form-group">
            <label class="lead">CPF</label>
            <InputText class="form-control" id="CPF" name="CPF" @bind-Value="usuario.CPF" readonly></InputText>
        </div>
        <div class="form-group">
            <label class="lead">CEL</label>
            <InputText class="form-control" id="CEL" name="CEL" @bind-Value="usuario.CEL" readonly></InputText>
        </div>
        <div class="form-group">
            <label class="lead">Endereco</label>
            <InputText class="form-control" id="Endereco" name="Endereco" @bind-Value="usuario.Endereco" readonly></InputText>
        </div>
        <div class="form-group">
            <label class="lead">Tipo</label>
            <InputText class="form-control" id="Tipo" name="Tipo" @bind-Value="usuario.Tipo" readonly></InputText>
        </div>
        
    </div>
</EditForm>

@code {
    [Parameter]
    public string Id { get; set; }

    private Consultorio.Data.Usuarios usuario { get; set; }

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(Id) & Id == "0")
        {
            usuario = new Data.Usuarios();
        }
        else
        {
            usuario = UsuariosService.GetUsuario(Id);
        }
    }
     
}
